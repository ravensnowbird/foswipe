<div class="row">
	<div class="container">

		<div class="col-md-10">

			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title"><strong>New Ticket </strong></h3>
				</div>
				<div class="panel-body">

					<%= form_for(@ticket) do |f| %>
					<% if @ticket.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

						<ul>
							<% @ticket.errors.full_messages.each do |msg| %>
							<li>
								<%= msg %>
							</li>
							<% end %>
						</ul>
					</div>
					<% end %>

					<section class="content">
						<div class="row">
							<!-- left column -->
							<div class="col-md-12">
								<!-- general form elements -->
								<div class="box box-primary">
									<div class="box-header">
										<h3 class="box-title">Create Ticket</h3>
									</div><!-- /.box-header -->
									<!-- form start -->
									<form role="form">
										<div class="box-body">
											<div class="form-group">
												<%= f.label :title %>
												<br>
												<%= f.text_field :title, :class => "form-control" %>
											</div>
											<div class="form-group">
												<%= f.label :description %>
												<br>
												<%= f.text_field :description, :class => "form-control" %>
											</div>

										</div><!-- /.box-body -->
										<div class="form-group">

											<%= f.label :status %>
											<br />
											<%= f.select :status, Foswipe::Ticket.statuses, {},:class=>"selectpicker"  %>

											<br />
										</div>

										<div class="form-group">
											<li class=" dropdown_blank default_group field">

												<%= f.label :priority %>
												<br />
												<%= f.select :priority, Foswipe::Ticket.priorities, {},:class=>"selectpicker"  %>
											</li>
											<br />
										</div>

										<%= f.label :description %>
										<br />
										<%= f.text_area :description, :cols => "100", :rows => "10" %>

										<div class="form-group">
											<%= f.fields_for :ticket_attachments do |builder| %>
											<%= render "attachment_fields", :f => builder %>
											<% end %>
										</div>
										<% if @find%>
										<label> Assign an Agent</label>
										<br />
										<%= f.select "support_id", options_from_collection_for_select(@agents, "id", "first_name"), prompt: "Assign to Agent"  %>

										<% end %>
								</div>
								<%= f.submit %>
							</div><!-- /.box -->

							<% end %>
