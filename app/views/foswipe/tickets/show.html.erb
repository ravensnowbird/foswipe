<!-- Main content -->
<div class="clearfix" >
	<section class="content">

		<!-- row -->
		<div class="row">
			<div class="col-md-9">
				<!-- The time line -->
				<ul class="timeline">
					<!-- timeline time label -->
					<li class="time-label">
						<span class="bg-red"> <%= @ticket.created_at.time %> </span>
					</li>
					<!-- /.timeline-label -->
					<!-- timeline item -->
					<li>
						<i class="fa fa-envelope bg-blue"></i>
						<div class="timeline-item">
							<span class="time"><i class="fa fa-clock-o"></i> 12:05</span>
							<h3 class="timeline-header"><a href="#"><%= @ticket.customer.name %></a> Generated this Ticket</h3>
							<div class="timeline-body">
								<%= @ticket.description %>
							</div>
							<div class='timeline-footer'>

								<%= link_to '<i class="btn btn-primary">Edit</i>'.html_safe , edit_ticket_path(@ticket.id), method: :get  %> <!--<%= link_to "Delete" , ticket_path(@ticket.id), method: :delete  %> -->
							</div>
						</div>
					</li>
					<!-- END timeline item -->
					<!-- timeline item -->
					<!-- <li>
					<i class="fa fa-user bg-aqua"></i>
					<div class="timeline-item">
					<span class="time"><i class="fa fa-clock-o"></i> 5 mins ago</span>
					<h3 class="timeline-header no-border"><a href="#">Sarah Young</a> accepted your friend request</h3>
					</div>
					</li>
					<!-- END timeline item -->
					<!-- timeline item -->

					<li>
						<i class="fa fa-comments bg-yellow"></i>
						<div class="timeline-item">
							<%= form_for([@ticket,@comment]) do |f| %>
							<% if @comment.errors.any? %>
							<div id="error_explanation">
								<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

								<ul>
									<% @comment.errors.full_messages.each do |msg| %>
									<li>
										<%= msg %>
									</li>
									<% end %>
								</ul>
							</div>
							<% end %>

							<div class="field">
								<%= f.label :content %>
								<br>
								<%= f.text_area :content,:cols => "30", :rows => "5",:class=>"form-control" %>
							</div>
							<br>
							<div class="actions">
								<%= f.submit %>
							</div>
							<% end %>
						</div>
					</li>

					<% if @ticket.ticket_comments %>
					<li>
						<i class="fa fa-comments bg-yellow"></i>
						<div class="timeline-item">
							<% @ticket.ticket_comments.each do |c|%>
							<span class="time"><i class="fa fa-clock-o"></i>time</span>
							<h3 class="timeline-header"><a href="#"><%= @user.find(c.id).first_name %></a> commented on this Ticket</h3>
							<div class="timeline-body">
								<%= c.content %>
							</div>
							<div class='timeline-footer'>
								<%= link_to '<i class="btn btn-warning btn-flat btn-xs">View Comment</i>'.html_safe, ticket_comment_path(@ticket.id,c.id), method: :get%></a>
							</div>
							<% end %>
						</div>
					</li>
					<% end %>
					<!-- END timeline item -->
					<!-- timeline time label -->
			</div>
			<div style="float:right; width:25%; ">
				<div class="callout callout-warning">
					<h5>Ticket Status </h5> : <h3><font color="green"><%= @ticket.status %></font></h3>
				</div>
				<div class="col-md-4">
					<!-- Default box -->
					<div class="box">
						<div class="box-header">
							<h3 class="box-title">Requestor Info</h3>
							<div class="box-tools pull-right">
								<button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
									<i class="fa fa-minus"></i>
								</button>
								<button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
									<i class="fa fa-times"></i>
								</button>
							</div>
						</div>
						<div class="box-body">
							<code>
								<%= @user.find(@ticket.client_id).first_name %>
							</code>
							<p>
								<%= @user.find(@ticket.client_id).email %>
							</p>
						</div><!-- /.box-body -->

					</div><!-- /.box -->
				</div>
				<!-- Default Box ended-->

				<div class="box box-primary">
					<!-- <div class="box-header">
					<h3 class="box-title">Quick Example</h3>
					</div><!-- /.box-header -->
					<!-- form start -->
					<h4>Ticket Properties</h4>

					<%= form_for(@ticket, :html => {:multipart => true}) do |f| %>
					<div class="box-body">
						<% if @ticket.errors.any? %>
						<div id="error_explanation">
							<h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

							<ul>
								<% @ticket.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>
								</li>
								<% end %>
							</ul>
						</div>
						<% end %>

						<div class="form-group">

							<%= f.label :status %>
							<br />
							<%= f.select :status, [['Open','open'],['Pending','pending'],['Resolved','resolved'],['Closed','closed'],['Waiting on Customer','waiting on Customer'],['Waiting on Third Party','waiting on Third Party']], {},:class=>"selectpicker"  %>

							<br />
						</div>

						<div class="form-group">
							<%= f.label :priority %>
							<br />
							<%= f.select :priority, [['Low','low'],['Mediem','medium'],['High','high'],['Urgent','urgent']], {},:class=>"selectpicker"  %>
							<br />
						</div>
						<label> Assign an Agent</label>
						<br />
						<%= f.select "support_id", options_from_collection_for_select(@agents, "id", "first_name"), prompt: "Assign to Agent"  %>
					</div>

				</div><!-- /.box -->

			</div><!-- /.box-body -->

			<div class="box-footer">
				<%= f.submit  %>
			</div>
			<% end %>
		</div>

</div>

