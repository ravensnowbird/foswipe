<h1>Listing Customers</h1>

<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<thead>
			<tr bgcolor="#1E90FF">
				<th>Name</th>
				<th>Email</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @clients.each do |client| %>
			<tr>
				<td> <%= link_to client.name, edit_client_path(client) %> </td>
				<td><%= link_to client.email, edit_client_path(client) %></td>
				<td><%= link_to raw('<i class="fa  fa-trash-o"></i>'), client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>

<%= link_to 'New Client', new_client_path, :class=>"btn btn-primary btn-sm" %>
