<div class="row">
<div class="container">
   <div class="col-md-4"></div>
   <div class="col-md-4">
      <div class="panel panel-primary">
  <div class="panel-heading"><h3 class="panel-title"><strong>Login to Your Account </strong></h3></div>
  <div class="panel-body">
        

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin" ,:role=>"form") do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email,:class => "form-control", :placeholder => "Email Address", autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, :class => "form-control", :placeholder => "Enter Your Password", autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class=>"btn btn-lg btn-primary btn-block" %></div>
<% end %><br>
<%= link_to "Sign up", new_registration_path(resource_name) %><br />
<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div></div></div>
<div class="col-md-4"></div>
</div>
</div>
<%#= render "devise/shared/links" %>
